<script type="text/javascript">
	var oTable = null;
	var tomSelectProvince;

	$(document).ready(function() {
		tomSelectProvince = new TomSelect('#province', {
			plugins: ['remove_button'],
			placeholder: 'Select Province/District(s)',
			maxItems: null
		});
		oTable = $('.datatables').dataTable({
			"bScrollCollapse": true,
			"bRetrieve": true,
			"pageLength": 50,
			"aoColumns": [{
				"sClass": "center"
			}, {
				"sClass": "center"
			}, {
				"sClass": "center"
			}, {
				"sClass": "center"
			}, {
