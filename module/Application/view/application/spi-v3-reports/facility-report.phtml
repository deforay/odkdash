			}, {
				"sClass": "center"
			}, {
				"sClass": "center"
			}, {
				"sClass": "center"
			}],
			"aaSorting": [
				[1, "desc"]
			],
			"bProcessing": true,
			"bServerSide": true,
			"sAjaxSource": "<?php echo $this->url('spi-v3-reports', array('action' => 'facility-report')); ?>",
			"fnServerData": function(sSource, aoData, fnCallback) {
				aoData.push({
					"name": "auditRndNo",
					"value": $("#auditRndNo").val()
				});
				aoData.push({
					"name": "dateRange",
					"value": $("#dateRange").val()
				});
				aoData.push({
					"name": "testPoint",
					"value": $("#testPoint").val()
				});
				aoData.push({
					"name": "testPointName",
					"value": $("#testPointName").val()
				});
				aoData.push({
					"name": "level",
					"value": $("#level").val()
				});
				aoData.push({
					"name": "province",
					"value": $("#province").val()
				});
				aoData.push({
					"name": "district",
					"value": $("#district").val()
				});
				aoData.push({
					"name": "affiliation",
					"value": $("#affiliation").val()
				});
				aoData.push({
					"name": "scoreLevel",
					"value": $("#scoreLevel").val()
				});
				$.ajax({
					"dataType": 'json',
					"type": "POST",
					"url": sSource,
					"data": aoData,
					"success": function(json) {
						$.unblockUI();
						fnCallback(json);
					}
				});
			}
		});
		var startDate = "";
		var endDate = "";
		$('#dateRange').daterangepicker({
				format: 'DD-MMM-YYYY',
				startDate: moment().subtract('days', 29),
				endDate: moment(),
				maxDate: moment(),
				ranges: {
					'Today': [moment(), moment()],
					'Yesterday': [moment().subtract('days', 1), moment().subtract('days', 1)],
					'Last 7 Days': [moment().subtract('days', 6), moment()],
					'Last 30 Days': [moment().subtract('days', 29), moment()],
					'This Month': [moment().startOf('month'), moment().endOf('month')],
					'Last Month': [moment().subtract('month', 1).startOf('month'), moment().subtract('month', 1).endOf('month')]
				},
			},
			function(start, end) {
				startDate = start.format('YYYY-MM-DD');
				endDate = end.format('YYYY-MM-DD');
			});
	});

	function exportFacility() {
		$.blockUI({
			message: '<h1>Loading...</h1>'
		});
		var dateRange = $("#dateRange").val();
		$.post("<?php echo $this->url('spi-v3-reports', array('action' => 'export-facility-report')); ?>", {
				dateRange: dateRange
			},
			function(data) {
				if (data == "" || data == null || data == undefined) {
					alert('<?= $this->translate('Unable to generate download'); ?>');
				} else {
					document.location.href = '/temporary/' + data;
				}
				$.unblockUI();
			});

	}

	function getReport() {
		$.blockUI({
			message: '<h1>Loading...</h1>'
		});
		oTable.fnDraw();
	}

	function getTestingPointTypeNames() {
		$.blockUI();
		var testingPointType = $('#testPoint').val();
		$.post("<?php echo $this->url('spi-v3-form', array('action' => 'get-testing-point-type-names')); ?>", {
				testingPointType: testingPointType
			},
			function(data) {
				$('.testPointNameSection').html(data);
				$.unblockUI();
			});
	}

	function getAllDistrict() {
		var province = $('#province').val();
		if (province != '' && province != null) {
			$.post("<?php echo $this->url('spi-v3-form', array('action' => 'get-district-by-province')); ?>", {
					province: province
				},
				function(data) {
					$('.districtFilter').html(data);
				});
		} else {
			$('#district').html('');
		}
	}
</script>
